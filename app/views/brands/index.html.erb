<p id="notice"><%= notice %></p>

<h1>Brands</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Viticulture</th>
          <th>Image</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @brands.each do |brand| %>
          <tr>
            <td><%= brand.name %></td>
            <td><%= brand.description %></td>
            <td><%= brand.viticulture %></td>
            <td><%= image_tag brand.image.url(:thumb) %></td>
            <td><%= link_to 'Show', brand , class: 'btn btn-xs btn-default' %></td>
            <td><%= link_to 'Edit', edit_brand_path(brand), class: 'btn btn-xs btn-success' %></td>
            <td><%= link_to 'Destroy', brand, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>      
    </table>
  </div>
</div>

<br>

