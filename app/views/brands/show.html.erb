<h2><%= @brand.name %></h2>

<div class="row">
	<div class="col-md-8">
		<p>
			<strong>Description: </strong><%= simple_format(@brand.description) %>
			<p><strong><%= link_to "Website", @brand.website %></strong></p>
		</p>
		<div class="row">
			<div class="col-md-6">
				<p><strong>Viticulture:</strong> <%= @brand.viticulture %></p>
				<p><strong>Country:</strong> <%= @brand.country %></p>
				<p><strong>Region:</strong> <%= @brand.region %></p>
				<p><strong>Appellation:</strong> <%= @brand.appellation %></p>
				<p><strong>Varietal:</strong> <%= @brand.varietal %></p>
			</div>
			<div class="col-md-6">
				<p><strong>Soil Type:</strong> <%= @brand.soil_type %></p>
				<p><strong>Enologist:</strong> <%= @brand.enologist %></p>
				<p><strong>Viticulturist:</strong> <%= @brand.viticulturist %></p>
				<p><strong>Vineyard Size:</strong> <%= @brand.vineyard_size %></p>
				<p><strong>Total Production:</strong> <%= @brand.total_production %></p>
			</div>
		</div>
	</div>
	<div class="col-md-4">
		<p><%= image_tag @brand.image_url(:medium).to_s %></p>
		<% if current_user && current_user.admin? %>
			<p><%= link_to 'Edit Brand', edit_brand_path(@brand) %> </p>
			<p><%= link_to 'Delete Brand', @brand, method: :delete, data: { confirm: 'Are you sure?' } %></p>
		<% end %>	
	</div>
</div>

<hr>

<h3>Products</h3>

<div class="media">
	<div class="media-body">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Name</th>
					<th>Link</th>
					<th>Type</th>
					<th>Subtype</th>
					<th>Vintage</th>
					<th>Country</th>
					<th>Region</th>
					<th>Description</th>
					<th>Image</th>
					<th>&nbsp;</th>
					<th>&nbsp;</th>
				</tr>
			</thead>
			<tbody>
				<% @products.each do |product| %>
				<tr>
					<td><%= product.name %></td>
					<td><%= link_to "Show Product Info", brand_product_path(@brand, product) %><br />
						<%= link_to "Show Tech Sheet", tech_sheet_brand_products_path(@brand, product) %>
					</td>
					<td><%= product.product_type %></td>
					<td><%= product.product_subtype %></td>
					<td><%= product.vintage %></td>
					<td><%= product.country %></td>
					<td><%= product.region %></td>
					<td><%= image_tag product.image_url(:thumb).to_s %></td>
					<% if current_user && current_user.admin? %>
						<td><%= link_to "Delete", [@brand, product], method: :delete, confirm: "Are you sure you want to delete this product?" %></td>
						<td><%= link_to "Edit", edit_brand_product_path(@brand, product) %></td>

					<% end %>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<%= link_to 'Back', brands_path, class: 'btn btn-default btn-sm' %>

<% if current_user && current_user.admin? %>

	<%= link_to 'Add new product', new_brand_product_path(@brand), class: 'btn btn-success btn-sm pull-right' %>

	<h3>Import Products</h3>
	  <%= form_tag import_brand_products_path(@brand, @product), multipart: true do %>
	    <p>
	    <%= file_field_tag :file %>
	    </p>
	    <%= submit_tag "Upload Products", class: 'btn btn-info btn-sm' %>
	  <% end %>

<% end %>