<p>
  <strong>Name:</strong>
  <%= @brand.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @brand.description %>
</p>

<p>
  <strong>Viticulture:</strong>
  <%= @brand.viticulture %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @brand.image.url(:thumb) %>
</p>

<div class="media">
	<div class="media-body">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Name</th>
					<th>Type</th>
					<th>Subtype</th>
					<th>Vintage</th>
					<th>Country</th>
					<th>Region</th>
					<th>Description</th>
					<th>Image</th>
					<th>&nbsp;</th>
				</tr>
			</thead>
			<tbody>
				<% @products.each do |product| %>
				<tr>
					<td><%= product.name %></td>
					<td><%= product.product_type %></td>
					<td><%= product.product_subtype %></td>
					<td><%= product.vintage %></td>
					<td><%= product.country %></td>
					<td><%= product.region %></td>
					<td><%= product.description %></td>
					<td><%= image_tag product.image.url(:thumb) %></td>
					<td><%= link_to "Delete", [@brand, product], method: :delete, confirm: "Are you sure you want to delete this product?" %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<%= link_to 'Edit', edit_brand_path(@brand) %> |
<%= link_to 'Back', brands_path %>

<%= link_to 'Add new product', new_brand_product_path(@brand), class: 'pull-right' %>
